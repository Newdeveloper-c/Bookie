@model List<Product>

<div class="card shadow border-0 mt-3 " style="margin-bottom:60px">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row pb-3 text-end">
            <div class="col-12 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert"
                style="width:200px">
                    <i class="bi bi-plus-circle"></i> Create Product
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th> Title </th>
                    <th> ISBN </th>
                    <th> Author </th>
                    <th> Price </th>
                    <th> Category </th>
                    <th class="text-center" style="width:230px"> Options </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}

