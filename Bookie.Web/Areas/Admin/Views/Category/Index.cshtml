@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row pb-3 text-end">
            <div class="col-12 text-end">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create"
                style="width:200px">
                    <i class="bi bi-plus-circle"></i> Create Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th class="text-center">
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderByDescending(item => item.DisplayOrder))
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            @category.DisplayOrder
                        </td>
                        <td class="text-center" style="width:300px">
                            <div class="w-30 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                                   class="btn btn-outline-dark mx-2" style="transition:0.3s; width:90px">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                                   class="btn btn-outline-danger mx-2" style="transition:0.3s">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

